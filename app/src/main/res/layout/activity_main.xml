<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center"
	android:background="#FFFFFFFF"
	android:padding="1dp">

	<TextView
		android:clickable="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="×"
		android:gravity="center"
		android:textColor="#FF000000"
		android:textSize="16sp"
		android:padding="10dp"
		android:background="@drawable/button_x_f00"
		android:layout_margin="1dp"
		android:id="@+id/del"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textSize="10sp"
		android:textColor="#FF000000"
		android:id="@+id/txt"/>

	<TextView
		android:clickable="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="+"
		android:gravity="center"
		android:textColor="#FF000000"
		android:textSize="16sp"
		android:padding="10dp"
		android:background="@drawable/button_o_fff"
		android:layout_margin="1dp"
		android:id="@+id/keep"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textSize="10sp"
		android:textColor="#FF000000"
		android:id="@+id/txt2"/>

	<TextView
		android:clickable="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="-"
		android:gravity="center"
		android:textColor="#FF000000"
		android:textSize="16sp"
		android:padding="10dp"
		android:background="@drawable/button_x_f00"
		android:layout_margin="1dp"
		android:id="@+id/clear"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="gone"
		android:id="@+id/lnlbtn">

		<TextView
			android:clickable="true"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Config"
			android:gravity="center"
			android:textColor="#FF000000"
			android:textSize="16sp"
			android:padding="10dp"
			android:background="@drawable/button_x_fff"
			android:layout_margin="1dp"
			android:id="@+id/config"/>

		<TextView
			android:clickable="true"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Edit Base"
			android:gravity="center"
			android:textColor="#FF000000"
			android:textSize="16sp"
			android:padding="10dp"
			android:background="@drawable/button_x_fff"
			android:layout_margin="1dp"
			android:id="@+id/edit_base"/>

		<TextView
			android:clickable="true"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Base_X"
			android:gravity="center"
			android:textColor="#FF000000"
			android:textSize="16sp"
			android:padding="10dp"
			android:background="@drawable/button_x_fff"
			android:layout_margin="1dp"
			android:id="@+id/base_x"/>

		<TextView
			android:clickable="true"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="←"
			android:gravity="center"
			android:textColor="#FF000000"
			android:textSize="16sp"
			android:padding="10dp"
			android:background="@drawable/button_x_fff"
			android:layout_margin="1dp"
			android:id="@+id/back"/>

	</LinearLayout>

</LinearLayout>

